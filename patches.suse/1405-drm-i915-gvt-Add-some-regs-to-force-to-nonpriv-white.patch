 	_MMIO(0x2690),
 	_MMIO(0x2694),
@@ -490,6 +494,7 @@ static i915_reg_t force_nonpriv_white_li
 	_MMIO(0xe18c),
 	_MMIO(0xe48c),
 	_MMIO(0xe5f4),
+	_MMIO(0x64844),
 };
 
