@@ -1021,6 +1022,7 @@ struct rpcrdma_req *rpcrdma_req_create(s
 	if (!req->rl_recvbuf)
 		goto out4;
 
+	INIT_LIST_HEAD(&req->rl_free_mrs);
 	INIT_LIST_HEAD(&req->rl_registered);
 	spin_lock(&buffer->rb_lock);
 	list_add(&req->rl_all, &buffer->rb_allreqs);
@@ -1129,11 +1131,13 @@ static void rpcrdma_rep_destroy(struct r
