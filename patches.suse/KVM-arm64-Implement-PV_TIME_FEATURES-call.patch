 arch/arm64/include/asm/kvm_host.h    |    2 ++
 arch/arm64/include/asm/pvclock-abi.h |   17 +++++++++++++++++
 arch/arm64/kvm/Makefile              |    1 +
 include/linux/arm-smccc.h            |   14 ++++++++++++++
 virt/kvm/arm/hypercalls.c            |    8 +++++++-
