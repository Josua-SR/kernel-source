+++ b/net/core/skbuff.c
@@ -5530,7 +5530,7 @@ int skb_mpls_pop(struct sk_buff *skb, __
 	int err;
 
 	if (unlikely(!eth_p_mpls(skb->protocol)))
-		return -EINVAL;
+		return 0;
 
 	err = skb_ensure_writable(skb, skb->mac_len + MPLS_HLEN);
 	if (unlikely(err))
