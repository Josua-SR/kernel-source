 {
 	struct vega12_hwmgr *data =
@@ -802,6 +817,8 @@ static int vega12_enable_all_smu_feature
 		}
 	}
 
+	vega12_init_powergate_state(hwmgr);
+
 	return 0;
 }
 
@@ -1986,6 +2003,9 @@ static void vega12_power_gate_vce(struct
 {
 	struct vega12_hwmgr *data = (struct vega12_hwmgr *)(hwmgr->backend);
 
+	if (data->vce_power_gated == bgate)
+		return;
+
 	data->vce_power_gated = bgate;
 	vega12_enable_disable_vce_dpm(hwmgr, !bgate);
 }
@@ -1994,6 +2014,9 @@ static void vega12_power_gate_uvd(struct
 {
 	struct vega12_hwmgr *data = (struct vega12_hwmgr *)(hwmgr->backend);
 
