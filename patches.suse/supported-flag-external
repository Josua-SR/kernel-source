 	$(if $(CONFIG_SUSE_KERNEL_SUPPORTED),						\
 		-S $(firstword $(wildcard $(dir $(MODVERDIR))/Module.supported		\
-		$(objtree)/Module.supported						\
-		$(srctree)/Module.supported /dev/null)))
+		$(if $(KBUILD_EXTMOD),,$(srctree)/Module.supported) /dev/null)))
 
